



    <div id="register">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title" id="registerTitle"><strong>User Registration</strong></h2>
                           <h3>{{Title}}</h3> 
                            <a class="btn btn-secondary float-right" href="/" role="button" id="goHome">Home</a>
                        </div>
                        {{#if errors}}
                            {{#each errors}}
                              <div class="alert alert-danger"> {{this.msg}}</div> 
                            {{/each}}
                        {{/if}}
                        <div class="card-body">
                            <form action="" method="POST" role="form">

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col">
                                            <label for="firstName">First Name</label>
                                            <input type="text" class="form-control" id="firstName" placeholder="First Name">
                                        </div>
                                        <div class="col">
                                            <label for="lastName">Last Name</label>
                                            <input type="text" class="form-control" id="lastName" placeholder="Last Name">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="email">Email (username)</label>
                                    <input type="text" class="form-control" id="email" placeholder="someone@example.com">
                                </div>

                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input type="text" class="form-control" id="password" placeholder="password">
                                </div>

                                <div class="form-row">
                                    
                                    <div class="form-group col-md-6">
                                        <label for="type">General Type</label>
                                        <select id="type" class="form-control">
                                            <option selected>Choose...</option>
                                            <option>Junior Size</option>
                                            <option>Petite</option>
                                            <option>Tall</option>
                                            <option>Plus Size</option>
                                        </select>
                                    </div>

                                </div>

                            </form>
                            <br>
                            <div class="text-right">
                                    <span class="newUser">
                                <button type="submit" class="btn btn-primary btn-md btn-info" id="createUser" data-toggle="modal" data-target="#confirmModal"></span>
                                    Submit</button>
                            </div>

                            <!-- Modal -->
                            <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="registerModalLabel">Sucessful Registration</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Now, continue the shopping quest...</p>
                                        </div>
                                        <div class="modal-footer">
                                           
                                            <a href="/search"><button>" class="btn btn-primary"> Search and Shop! </button></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
  




